#
# wm independent hotkeys
#

# terminal emulator
super + Return
#  termite -e tmux
  alacritty -e tmux

super + shift + Return
#  termite
  alacritty

# screenshot
super + F2
#        scrot -s -e 'mv $f ~/shots'
  scrot -s

# program launcher
super + r
  rofi -combi-modi drun,run -show combi -modi combi -show-icons

super + shift + r
  rofi -show window -show-icons

super + e
  firefox

super + shift + e
  firefox --private-window

super + ctrl + Tab
  $HOME/bin/toggle_panel

super + Escape
  xscreensaver-command --lock

# make sxhkd reload its configuration files:
super + alt + Escape
  $HOME/.config/bspwm/bspwmrc & pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + ctrl + Escape
  bspc quit

# close and kill
super + {_,ctrl + }w
  bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
  bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
  bspc node -s biggest

# balance nodes on current desktop
super + b
  bspc node @/ -B

# flip nodes on current desktop
super + {comma,period}
  bspc node @/ -F {horizontal,vertical}

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
  bspc node -g {locked,sticky,private}

# add focused window to a tabbed instance in given direction
super + q; {h,j,k,l}
    $HOME/bin/tabc $(bspc query -N -n {west,south,north,east}) add $(bspc query -N -n focused)

# remove one tab from tabbed
super + q; r
    tabbed=$(bspc query -N -n focused); \
    child=$($HOME/bin/tabc $tabbed list | head -n1); \
    $HOME/bin/tabc $tabbed remove $child

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
  bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
  bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# move node into preselect region
super + shift + ctrl {h,j,k,l}
  bspc node -n {west,south,north,east}.!automatic

# cancel the preselection for the focused node
super + semicolon
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
  bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
  bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
  xdo move {-x -20,-y +20,-y -20,-x +20}

# insert receptacle, or clear receptacles on current desktop
super + {_,shift} + n
  insert={true,false}; \
  $insert && bspc node -i || \
  for win in `bspc query -N -n .leaf.\!window`; do bspc node $win -k ; done;

# audio controls
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Lower,Raise}Volume
  pactl set-sink-mute @DEFAULT_SINK@ false; \\
  pactl set-sink-volume 0 {-,+}5%

XF86Audio{Prev,Next}
  mpc -q {prev,next}

