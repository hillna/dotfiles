#
# bspwm hotkeys
#

super + alt + ctrl + Escape
	bspc quit && pkill panel

super + ctrl + Tab 
        $HOME/bin/toggle_panel

super + ctrl + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

# Move window into presel position
super + shift + ctrl {h,j,k,l}
        bspc window -w {left.manual,down.manual,up.manual,right.manual}

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -F {horizontal,vertical}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
        bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^
super + !button{1-3}
        bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

Print
        scrot -q 100

super + Return
	urxvtc -e tmux

super + e
        google-chrome-stable

super + r
	dmenu_run

super + Escape
        #xscreensaver-command --lock
        light-locker-command -l

# reload bspwmrc & sxhkd
super + alt + Escape
        $HOME/.config/bspwm/bspwmrc && pkill -USR1 -x sxhkd

