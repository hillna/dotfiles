#! /bin/sh

bspc config border_width        2
bspc config window_gap         	8

bspc config split_ratio         0.52
bspc config borderless_monocle  true
bspc config gapless_monocle     true
#bspc config focus_by_distance   true
remove_disabled_monitors        true
remove_unplugged_monitors       true

bspc monitor DP-1 -d I II
bspc monitor DP-3 -d III IV V
bspc monitor DP-5 -d VI VII

# Macbook
if [ $(bspc query -M |grep DP3) ]; then
  bspc monitor DP3 -d IV V VI VII
  bspc monitor eDP1 -d I II III
elif [ $(bspc query -M |grep DP2) ]; then
  bspc monitor DP2 -d IV V VI VII
  bspc monitor eDP1 -d I II III
else
  bspc monitor eDP1 -d I II III IV V VI VII
fi

bspc rule -a Gimp follow=on state=floating
bspc rule -a mplayer2 state=floating
bspc rule -a vlc state=floating
bspc rule -a feh state=floating

# Compositing
compton -b

WALLPAPER=$HOME/.config/bspwm/wallpaper
feh --bg-max --no-xinerama $(find $WALLPAPER |shuf -n1)

