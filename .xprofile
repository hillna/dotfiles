# x setup
xsetroot -cursor_name left_ptr

# set configs
if [ -f /etc/macbook ]
then
    ln -s ~/.config/termite/config.mac ~/.config/termite/config
    ~/.screenlayout/single_screen.sh
else
    ln -s ~/.config/termite/config.default ~/.config/termite/config
fi

# fonts
xset +fp ~/.fonts

# env
#export TERM="xterm-256color"
export EDITOR="vim"
export BROWSER=""

# screensaver & lock
#xss-lock -- xscreensaver-command -lock &
xscreensaver -no-splash &

# autorun
#urxvtd -q -f -o &
dropbox &

