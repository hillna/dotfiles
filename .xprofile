# env
export PATH=$HOME/bin:$HOME/.local/bin:$PATH

export EDITOR="vim"
export BROWSER="chromium"

export POWERLINE_COMMAND=$HOME/.local/bin/powerline
export POWERLINE_CONFIG_COMMAND=$HOME/.local/bin/powerline-config

# fonts
xset +fp ~/.fonts

# theme
xsetroot -cursor_name left_ptr

# set configs
if [ -f /etc/macbook ]
then
    setxkbmap -layout us -option ctrl:nocaps
    ln -s ~/.config/termite/config.mac ~/.config/termite/config
    autorandr --change
else
    ln -s ~/.config/termite/config.default ~/.config/termite/config
    $HOME/.screenlayout/triptic.sh
fi

# compositing
#$HOME/bin/compmgr --start
compton -b

# screensaver & lock
xscreensaver -no-splash &

# keyring
#eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
#export SSH_AUTH_SOCK
eval $(ssh-agent -s)

