# . $HOME/.zsh_aliases

# Alises
alias ll="ls -l"
alias py="python"
alias p="py"
alias aur="aurman"
alias sleepnow="pmset sleepnow"
alias steam-wine='wine ~/.wine/drive_c/steam/Steam.exe -no-cef-sandbox -no-dwrite >/dev/null 2>&1 &'
alias chrome='google-chrome-beta'
alias tmuxs="tmux list-sessions"
alias tmuxa="tmux attach-session -t"
alias vim="nvim"
alias reboot='sudo reboot'
alias shutdown='sudo shutdown -h now'
alias gssh="gcloud compute ssh"
alias gsshm="gcloud beta compute ssh --internal-ip --project=olark-main"
alias gsshp="gcloud beta compute ssh --internal-ip --project=olark-prod"
alias gsshs="gcloud beta compute ssh --internal-ip --project=olark-staging"
alias gsshc="gcloud beta compute ssh --internal-ip --project=olark-core"
alias tisman="wget -qO- pastebin.com/raw/PT8LbcWA | groff -Tascii -man | less"

# python2 aliases
if [ $(uname |grep Linux) ] ; then
    alias python="python2"
    alias pip="pip2"
    alias python-config="python2-config"
    alias virtualenv="virtualenv2"
fi

# mpc aliases

alias play="mpc play"
alias pause="mpc pause"
alias next="mpc next"
alias prev="mpc prev"

# Git Aliases
alias gpullr="git pull --rebase origin master"
alias gpush="gpullr && git push origin master"
alias gstatus="git status"
alias gcommit="git commit -a"
alias gref="git rev-parse HEAD && git rev-parse HEAD | pbcopy"

# Homebrew coreutils aliases
if [ -f /usr/local/bin/gsleep ]; then
  alias sleep="gsleep"
fi

eval $(thefuck --alias)
