# mpc aliases
alias play="mpc play"
alias pause="mpc pause"
alias next="mpc next"
alias prev="mpc prev"

# Git Aliases
alias gpullr="git pull --rebase origin master"
alias gpush="gpullr && git push origin master"
alias gstatus="git status"
alias gcommit="git commit -a"
alias gref="git rev-parse HEAD && git rev-parse HEAD | pbcopy"

# Kubectl aliases
alias ip2pod='kubectl get pods --all-namespaces -o=custom-columns=NAME:.metadata.name,PODIP:.status.podIP | grep $1'

eval $(thefuck --alias)
