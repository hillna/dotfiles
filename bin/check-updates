#!/bin/sh

if [ -f /usr/bin/checkupdates ]; then
  arch_updates="$(checkupdates 2>/dev/null | wc -l)"
else
  arch_updates="0"
fi

if [ -f /usr/bin/paru ]; then
  aur_updates="$(paru -Qua 2>/dev/null | wc -l)"
else
  aur_updates="0"
fi

if [ ${arch_updates} -gt 0 ] || [ ${aur_updates} -gt 0 ]; then
  echo -e "ï€› ( ${arch_updates} | ${aur_updates} )"
else
  echo -e ""
fi
