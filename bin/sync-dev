#!/bin/bash

if [ "$1" == "dry" ]; then
	rsync -vrltgoD --delete \
	--dry-run \
	--exclude '*.git*' \
	--exclude '.vagrant' \
	--exclude 'Validation.pem' \
        --exclude 'validation.pem' \
	~/Source/chef-repo hilln-box:Source/.
else
	rsync -vrltgoD --delete \
	--exclude '*.git*' \
	--exclude '.vagrant' \
	--exclude 'Validation.pem' \
	--exclude 'validation.pem' \
	~/Source/chef-repo hilln-box:Source/.
fi
